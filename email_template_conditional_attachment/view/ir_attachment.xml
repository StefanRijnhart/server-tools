<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_attachment_form" model="ir.ui.view">
            <field name="name">Conditional attachment onto email template</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="base.view_attachment_form" />
            <field name="arch" type="xml">
                <group name="description_group" position="after">
                    <group name="conditionally_attach"
                           string ="Email templates to conditionally attach to" 
                           />
                    <field name="conditional_attachment_ids"
                           nolabel="1" colspan="4">
                        <tree string="Conditional attachments" editable="bottom">
                            <field name="template_id" />
                            <field name="domain" />
                        </tree>
                    </field>
                </group>
            </field>
        </record>
        
    </data>
</openerp>
